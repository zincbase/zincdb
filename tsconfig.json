{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es5",
		"module": "none",
		"lib": [
			"es5",
			"es2015.promise",
			"dom"
		],
		"outFile": "build/development/zincdb.js",
		"watch": false,
		"sourceMap": true,
		"removeComments": false,
		"noEmitHelpers": false,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"allowJs": true,
		"strictNullChecks": true,
		"noLib": false,
		"noEmit": false,
		"noFallthroughCasesInSwitch": false,
		"newLine": "LF",
		"emitBOM": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"skipLibCheck": false,
		"alwaysStrict": false,
		"jsx": "react",
		"pretty": false
	},
	"include": [
		"src/Types/**/*.ts",
		"src/Globals/**/*.js",
		"src/Globals/**/*.ts",
		"src/TestEnvironment/**/*.ts",
		"src/Library/**/*.ts",
		"src/NodeLibrary/**/*.ts",
		"src/DB/**/*.ts",
		"editor/src/Environment/**/*.ts",
		"editor/src/**/*.ts",
		"editor/src/**/*.tsx",
		"benchmarks/src/**/*.ts",
		"tests/testconfig.js",
		"tests/TestInstaller.ts"
	],
	"exclude": [
		"node_modules"
	]
}
