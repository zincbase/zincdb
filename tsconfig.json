{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es5",
		"module": "none",
		"lib": ["es5", "es2015.promise", "dom"],
		"outFile": "build/development/zincdb.js",
		"watch": false,
		"sourceMap": true,
		"removeComments": false,
		"noEmitHelpers": false,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"allowJs": true,
		"strictNullChecks": true,
		"noLib": false,
		"noEmit": false,
		"noFallthroughCasesInSwitch": false,
		"newLine": "LF",
		"emitBOM": false,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"skipLibCheck": false,
		"alwaysStrict": false,
		"jsx": "react",
		"pretty": false
	},
	"include": [
		"lib/1_Types/**/*.ts",
		"lib/2_Globals/**/*.js",
		"lib/2_Globals/**/*.ts",
		"lib/3_Library/**/*.ts",
		"lib/4_NodeLibrary/**/*.ts",
		"lib/5_DB/**/*.ts",
		"testconfig.js",
		"tests/src/**/*.ts",
		"benchmarks/src/**/*.ts",
		"editor/src/**/*.ts",
		"editor/src/**/*.tsx"
	],
	"exclude": [
		"node_modules"
	]
}